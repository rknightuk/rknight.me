<style>
    .root {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        background: linear-gradient(328deg, rgba(233,52,240,1) 0%, rgba(234,67,135,1) 100%, rgba(0,212,255,1) 100%);
    }

    .wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 80%;
        margin: 0 auto;
    }

    .title {
        color: white;
        font-size: 80px;
        margin: 0 auto;
        font-family: 'Atkinson Hyperlegible';
        text-align: center;
    }

    .name {
        text-shadow: black 3px 3px 1px;
        color: white;
        font-size: 140px;
        margin: 30px auto 10px auto;
        font-family: 'Bayshore';
        text-align: center;
    }
</style>

<div class="root">
    <div class="wrapper">
        <div class="name">Robb Knight</div>
        {% if title !== 'Robb Knight' %}
            <div class="title">{{ title }}</div>
        {% endif %}
    </div>
</div>
