{%- for workflow in alfred.workflows %}
	<div class="wf-wrap" id="{{ workflow.uid }}">
		<div class="wf-head-icon">
			<img class="wf-icon" src="{{ workflow.icon }}">
		</div>
		<div class="wf-head-info">
			<h3><a href="#{{ workflow.uid }}">#</a> {{ workflow.name }}</h3>
			{% if workflow.description %}
				<p><em>{{ workflow.description }}</em></p>
			{% endif %}
			<p><a href="{{ workflow.link }}">Download version {{ workflow.version }}</a></p>
		</div>
	</div>
	{% if workflow.screenshot %}
		<img class="wf-screenshot" src="{{ workflow.screenshot }}">
	{% endif %}
{% endfor %}