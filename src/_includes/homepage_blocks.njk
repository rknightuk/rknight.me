<div class="rkblock home">
    <div class="container container-sm">
        <div class="block-header" style="background-color: #4db5ad;margin-bottom: 20px;">
            <h2>Latest Blog Posts</h2>
        </div>
        {%- for post in collections.firstPosts %}
            {% include 'post_list_item.njk' %}
        {% endfor %}
        <p><a href="/blog">View All Posts</a></p>
    </div>
</div>

<div class="rkblock home">
    <div class="container container-sm">
        <div class="block-header" style="background-color: #d76150;margin-bottom: 20px;">
            <h2>Latest Links</h2>
        </div>
        {%- for link in collections.links.slice(0, 3) %}
            {% include 'link_list_item.njk' %}
        {% endfor %}

        <p><a href="/links">View All Links</a></p>
    </div>
</div>


<div class="rkblock home">
    <div class="container container-sm">
        <div class="block-header" style="background-color: #efaa32;margin-bottom: 20px;">
            <h2>Latest Podcasts</h2>
        </div>

        <div class="blogroll blogroll--podcasts">
            {%- for pod in mypodcasts.latest %}
                <div class="blogroll--blog" style="background-image: url('{{ pod.show.art }}')">
                    <div class="blogroll--data">
                        <h3><a href="{{ pod.show.link }}">{{ pod.show.title }}</a></h3>
                        <p class="blog--subtitle"><em><a href="{{ pod.link }}">{{ pod.title | safe }}</a></em></p>
                        <p>{{ pod.desc }}</p>
                    </div>
                </div>
            {%- endfor -%}

            <p><a href="/podcasts">View All Episodes</a></p>
        </div>

    </div>
</div>

<div class="rkblock home">
    <div class="container container-sm">        
        <div class="block-header" style="background-color: #44a25e;margin-bottom: 20px;">
            <h2>Recent Projects</h2>
        </div>
        <div class="home-projects">
            {%- for project in site.projects.featured %}
            <div class="home-project" style="background-image: url('/assets/projects/{{ project.image }}');">
                <a href="{{ project.link }}">{{ project.title }}</a>
            </div>
            {% endfor%}
        </div>

        <p><a href="/projects">View All Projects</a></p>
    </div>
</div>